<Intersoft:DrawerPage
    x:Name="pageRoot"
    x:Class="DrawerSamples.WinRT.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    HeaderBackground="#364d91"
    xmlns:Intersoft="using:Intersoft.Crosslight.WinRT" xmlns:common="using:DrawerSamples.WinRT.Common"
    mc:Ignorable="d">

    <Intersoft:DrawerPage.HeaderTemplate>
        <DataTemplate>
            <Grid>
                <Button HorizontalAlignment="Right" Padding="0" BorderBrush="Transparent" Intersoft:DrawerPage.DrawerButton="Right"  >
                    <Image Width="30" Height="40" Source="/Assets/Images/people-icon-white.png"/>
                </Button>

            </Grid>
        </DataTemplate>
    </Intersoft:DrawerPage.HeaderTemplate>
</Intersoft:DrawerPage>
