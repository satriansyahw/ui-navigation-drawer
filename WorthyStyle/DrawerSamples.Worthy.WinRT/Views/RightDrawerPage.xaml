<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="DrawerSamples.WinRT.Views.RightDrawerPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DrawerSamples.WinRT.Views"
    xmlns:common="using:DrawerSamples.WinRT.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#a1a1a1">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

       
        <StackPanel Grid.Row="1">
            <Image Width="100" Height="100" Source="/Assets/Images/Idea.png"  />
            <TextBlock HorizontalAlignment="Center" Margin="25" x:Name="pageTitle" TextWrapping="Wrap" Grid.Column="1" Text="You can place any kind of Fragment or custom views in the right drawer pane." Style="{StaticResource PageSubheaderTextStyle}"/>
        </StackPanel>
      
    </Grid>
</common:LayoutAwarePage>
